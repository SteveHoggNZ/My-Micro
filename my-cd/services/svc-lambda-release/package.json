{
  "project": "my-cd",
  "name": "svc-lambda-release",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "check:env": "better-npm-run check:env",
    "lint": "better-npm-run lint",
    "lint:fix": "better-npm-run lint --fix",
    "test": "better-npm-run test",
    "test:watch": "better-npm-run test --watch",
    "build": "better-npm-run check:env && better-npm-run build",
    "deploy": "better-npm-run check:env && better-npm-run deploy"
  },
  "betterScripts": {
    "check:env": {
      "command": "test ! -z $S3_BUCKET && test ! -z $PROJECT && test ! -z $SERVICE && test ! -z $VERSION && test ! -z $ENVIRONMENT"
    },
    "lint": {
      "command": "eslint \"*.js\""
    },
    "test": {
      "command": "node_modules/mocha/bin/mocha \"./src/**/*.test.js\""
    },
    "build": {
      "command": "aws cloudformation package --template-file sam.yml --output-template-file sam-out.yml --s3-bucket ${S3_BUCKET} --s3-prefix package/${PROJECT}/${SERVICE}/${VERSION}/${ENVIRONMENT}"
    },
    "deploy": {
      "command": "aws cloudformation deploy --template-file sam-out.yml --stack-name ${PROJECT}-${SERVICE}-${ENVIRONMENT} --parameter-overrides ProjectNameParameter=${PROJECT} ServiceNameParameter=${SERVICE} EnvironmentParameter=${ENVIRONMENT} --capabilities CAPABILITY_IAM"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "better-npm-run": "0.0.15",
    "chai": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-plugin-promise": "^3.5.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "proxyquire": "^1.8.0",
    "sinon": "^2.3.2",
    "sinon-chai": "^2.10.0"
  },
  "dependencies": {
    "aws-sdk": "^2.58.0"
  }
}
