{
  "name": "srv-hello",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "check:env": "better-npm-run check:env",
    "lint": "better-npm-run lint",
    "lint:fix": "better-npm-run lint --fix",
    "package": "better-npm-run check:env && better-npm-run package",
    "deploy": "better-npm-run check:env && better-npm-run deploy"
  },
  "betterScripts": {
    "check:env": {
      "command": "test ! -z $S3_BUCKET && test ! -z $PROJECT && test ! -z $SERVICE && test ! -z $VERSION && test ! -z $ENVIRONMENT"
    },
    "lint": {
      "command": "eslint \"*.js\""
    },
    "package": {
      "command": "aws cloudformation package --template-file sam.yml --output-template-file sam-out.yml --s3-bucket ${S3_BUCKET} --s3-prefix package/${PROJECT}/${SERVICE}/${VERSION}/${ENVIRONMENT}"
    },
    "deploy": {
      "command": "aws cloudformation deploy --template-file sam-out.yaml --stack-name ${PROJECT}-${SERVICE}-${ENVIRONMENT} --parameter-overrides ProjectNameParameter=${PROJECT} EnvironmentParameter=${ENVIRONMENT}"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
